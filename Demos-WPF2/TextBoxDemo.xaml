<UserControl x:Class="Demos_WPF2.TextBoxDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demos_WPF2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Margin="10" x:Name="txtVraag" TextWrapping="Wrap" >Wat is uw vraag?</TextBox>
        <Button Grid.Row="1" Margin="10" x:Name="btnGeefAntwoord" Content="Antwoord" Width="100" Click="btnGeefAntwoord_Click"/>
        <TextBox IsReadOnly="True" Grid.Row="2" Margin="10" x:Name="txtAntwoord" Foreground="Green"></TextBox>
    </Grid>
</UserControl>
