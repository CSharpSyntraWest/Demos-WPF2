<UserControl x:Class="Demos_WPF_Binding.BindingObject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demos_WPF_Binding"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <StackPanel>
        <Label Content="Voornaam:"/>
        <TextBox x:Name="txtVoorNaam" Text="{Binding VoorNaam,Mode=TwoWay,UpdateSourceTrigger=LostFocus}"/>
        <Label Content="Familienaam:"/>
        <TextBox x:Name="txtFamilieNaam" Text="{Binding FamilieNaam,Mode=TwoWay,UpdateSourceTrigger=LostFocus}"/>

    </StackPanel>
</UserControl>
